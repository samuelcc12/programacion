#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include <math.h>

using namespace std;



void main()
{
	float area,R;
	cout<<"AREA DEL CIRCULO";
	cout<<"Insertar lado: ";
	cin>>R;
	area=(R*R*3.1416);
	cout<<"Area: "<<area;

	getch();
}
----------------------------------------------------------------------
PSEUDOCODIGO
Proceso sin_titulo
	Escribir "AREA DEL CIRCULO"
	Escribir "INSERTAR RADIO: "
	Leer R
	AREA<-R*R*3.1416
	Escribir "AREA:" 
	Escribir AREA
FinProceso

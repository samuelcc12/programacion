// samuel.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
using namespace std;
void main()
{
float rectangulo (float b,float h);
float paralelogramo (float b,float h);
float triangulo (float b, float h);
{
	float base,altura,area;
	int opcion;
	do
	{
		cout<<"OPCIONES"<<endl;
		cout<<"1. Area del rectangulo"<<endl;
		cout<<"2. Area del paralelogramo"<<endl;
		cout<<"3. Area del triangulo"<<endl;
		cout<<"0. Salir"<<endl;
		cin>>opcion;
		cout<<endl;
		cout<<"ingrese base: ";
		cin>>base;
		cout<<endl;
		cout<<"ingrese altura: ";
		cin>>altura;
		cout<<endl;
		switch (opcion)
		{
		case 1:area=rectangulo(base,altura);
			cout<<"el area es: "<<area;break;
		case 2:area=paralelogramo(base,altura);
			cout<<"el area es: "<<area;break;
		case 3:area=triangulo(base,altura);
			cout<<"el area es: "<<area;break;
		case 0:cout<<"salir";break;
		default:cout<<"opcion fallida";break;
		}
	}
	while (opcion!=0);
	getch();
}
float rectangulo(float b,float h);
{
	float area;
	area=b*h;
	return area;
}
float paralelogramo(float b,float h);
{
	float area;
	area=b*h;
	return area;
}
float triangulo(float b,float h);
{
	float area;
	area=b*h/2;
	return area;
}


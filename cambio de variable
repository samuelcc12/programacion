INTERCAMBIO DE VARIABLE
C++

// tarea 1.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;

void main()
{
	float a,b,c;
	cout<<"Este programa tiene la funcion de intercambiar el valor de dos varibles dadas por el usuario";
	cout<<"introducir la variable a: ";
	cin>>a;
	cout<<"escribir el valor de la variable b: ";
	cin>>b;
	c=a;
	a=b;
	b=c;
	cout<<"el nuevo valor de a es: "<<a<<endl;
	cout<<"el nuevo valor de b es: "<<b<<endl;
	getch();
}
---------------------------------------------------------------------------------------------------------------------------
INTERCAMBIO DE VARIABLE
PSEUDOCODIGO
Proceso cambiodevariable
	Escribir "este programa tiene la funcion de intercambiar variables"
	Leer a
	Leer b
	aux<-a
	a<-b
	b<-aux
	Escribir "el valor de a es: ",a
	Escribir "el valor de b es: " ,b
FinProceso

